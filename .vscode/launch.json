{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1) Debug Custom Launcher",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/out/customLauncher.js",
      "args": ["{}"],                     // MTE passes WorkerArgs JSON; {} is fine locally
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "env": {
        "RUN_TESTS_FILE": "${workspaceFolder}/out/runTests.js",
        // Point to a locally installed VS Code so no download is needed:
        "VSCODE_EXECUTABLE_PATH": "/Applications/Visual Studio Code.app/Contents/MacOS/Electron",
        // Port the Extension Host will listen on so we can attach:
        "INSPECT_EXTENSIONS_PORT": "9229"
      },
      "skipFiles": ["<node_internals>/**"],
      "trace": true
    },
    {
  "name": "2) Attach: VS Code Extension Host",
  "type": "pwa-node",
  "request": "attach",
  "address": "127.0.0.1",
  "port": 9229,                      // must match INSPECT_EXTENSIONS_PORT
  "protocol": "inspector",
  "timeout": 30000,
  "restart": true,

  "sourceMaps": true,
  "outFiles": ["${workspaceFolder}/out/**/*.js"],
  "resolveSourceMapLocations": [
    "${workspaceFolder}/**",
    "!**/node_modules/**"
  ],
  "sourceMapPathOverrides": {
    "*": "*",
    "${workspaceFolder}/out/*": "${workspaceFolder}/out/*",
    "${workspaceFolder}/src/*": "${workspaceFolder}/src/*"
  },
  "skipFiles": [
    "<node_internals>/**",
    "**/node_modules/**"
  ],
  "trace": true
}

  ],
  "compounds": [
  {
    "name": "Debug: Launcher + Extension Host",
    "configurations": [
      "1) Debug Custom Launcher",
      "2) Attach: VS Code Extension Host"
    ],
    "stopAll": true
  }
]
}
