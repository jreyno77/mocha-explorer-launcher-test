{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1) Debug Custom Launcher",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/out/customLauncher.js",
      "args": ["{}"],                     // MTE passes WorkerArgs JSON; {} is fine locally
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "env": {
        "RUN_TESTS_FILE": "${workspaceFolder}/out/runTests.js",
        // Point to a locally installed VS Code so no download is needed:
        "VSCODE_EXECUTABLE_PATH": "/Applications/Visual Studio Code.app/Contents/MacOS/Electron",
        // Port the Extension Host will listen on so we can attach:
        "INSPECT_EXTENSIONS_PORT": "9229"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "2) Attach: VS Code Extension Host",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "timeout": 30000,
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ]
    }
  ]
}
